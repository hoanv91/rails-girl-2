<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>State</th>
      <th>Address</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Payment method</th>
      <th>Cart</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.state %></td>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.postcode %></td>
        <td><%= order.phone %></td>
        <td><%= order.email %></td>
        <td><%= order.payment_method %></td>
        <td><%= order.cart %></td>
        <td><%= order.total %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

