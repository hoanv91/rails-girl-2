<div class="hero-wrap hero-bread" style="background-image: url('../../images/bg_6.jpg');">
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Product</span></p>
            <h1 class="mb-0 bread">Product</h1>
          </div>
        </div>
      </div>
    </div>

    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-8 ftco-animate">
            <%= form_with(model: product, local: true) do |form| %>
							<h3 class="mb-4 billing-heading">Product Info</h3>
              <div class="row align-items-end">
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="name">Product Name</label>
                    <%= form.text_field :image, class: "form-control", placeholder: "" %>
                  </div>
                </div>
                <div class="w-100"></div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="image">Product Image</label>
                    <%= form.text_field :image, class: "form-control", placeholder: "" %>
                  </div>
                </div>
                <div class="w-100"></div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="description">Description</label>
                    <%= form.text_area :description, class: 'form-control', rows: "5", placeholder: "" %>
                  </div>
                </div>
                <div class="w-100"></div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="price">Price</label>
                    <%= form.text_field :price, class: "form-control", placeholder: "" %>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary py-3 px-4">Save</button>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
